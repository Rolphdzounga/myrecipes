<div class="row">
  <div class="col-md-12">
 
<%= form_for(recette, :html => {class:"form-horizontal",role:"form"}, local: true) do |form| %>


<div class="form-group">
  <div class="control-label col-md-2">
    <%= form.label :name %>
  </div>
  <div class="col-md-8">
    <%= form.text_field :name, id: :recette_name, class:"form-control",placeholder:"nom de la recette", autofocus:true %>
  </div>
</div>

<div class="form-group">
  <div class="control-label col-md-2">
    <%= form.label :description %>
  </div>
  <div class="col-md-8">
    <%= form.text_area :description, id: :recette_description,rows:10, class:"form-control",placeholder:"description de la recette" %>
  </div>
</div>
<div class="form-group">
  <div class="row">
    <div class="col-md-offset-3 col-md-7">
      <%#= form.collection_check_boxes(:ingredient_ids, Ingredient.all, :id, :name) %>
      <%= form.collection_check_boxes :ingredient_ids, Ingredient.all, :id, :name do |cb| %>
      <span class="text-muted"><%= cb.label(class:"checkbox-inline input_checkbox") {cb.check_box + cb.text} %></span>
        
        <span>
        <%#= cb.label(class:"checkbox-inline input-checkbox")  {cb.check_box(class: "checkbox") + cb.text}%>
        </span>
      <%end%>
    </div>
  </div>
</div>

  <div class="form-group">
    <div class="col-md-2 col-md-offset-2"><%= form.submit class:"btn btn-primary btn-lg btn-xlarge" %></div>
    
  </div>
<% end %>



      

  </div>
</div>


