<p id="notice"><%= notice %></p>

<h1 align="center">Listing des Recettes</h1>
<hr>

<% @recettes.each do |recette| %>
<div class="row">
  <div class="col-md-2">
    <section class="center">
      
    </section>
  </div>
  <div class="col-md-8 well">
    <h4><%= recette.name %></h4>
    <p><%= truncate(recette.description ,length:150) %></p>
    <p> <span class="quiet"><small> depuis <%= time_ago_in_words recette.created_at %></small> </span></p>
    
  </div>
</div>
<% end %>
