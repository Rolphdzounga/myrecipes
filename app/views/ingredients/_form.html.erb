<div class="row">
  <div class="col-md-12">
 
<%= form_for(ingredient, :html => {class:"form-horizontal",role:"form"}, local: true) do |form| %>


<div class="form-group">
  <div class="control-label col-md-2">
    <%= form.label :"Nom l'ingrédient" %>
  </div>
  <div class="col-md-8">
    <%= form.text_field :name, id: :name, class:"form-control",placeholder:"Entrez le nom de l'ingrédient", autofocus:true %>
  </div>
</div>


  <div class="form-group">
    <div class="col-md-2 col-md-offset-2"><%= form.submit (params[:action]=="new" ? "Ajouter l'ingrédient": "Mettre à jour l'ingredient"), class:"btn btn-primary btn-lg btn-xlarge" %></div>
    
  </div>
<% end %>

  </div>
</div>

 