<div class="row">
  <div class="col-md-12">
 
<%= form_for(:session, :html => {class:"form-horizontal",role:"form"},url:login_path, local: true) do |form| %>
<div class="form-group">
  <div class="control-label col-md-2">
    <%= form.label :email %>
  </div>
  <div class="col-md-8">
    <%= form.email_field :email, id: :chef_email, class:"form-control",placeholder:"Entrez votre email" %>
  </div>
</div>

<div class="form-group">
  <div class="control-label col-md-2">
    <%= form.label :password %>
  </div>
  <div class="col-md-8">
    <%= form.password_field :password, id: :chef_password, class:"form-control",placeholder:"Entrez votre mot de passe" %>
  </div>
</div>

  <div class="form-group">
    <div class="col-md-2 col-md-offset-2"><%= form.submit ("Log in"), class:"btn btn-primary btn-lg btn-xlarge" %></div>
  </div>
<% end %>
 
  </div>
</div>

 